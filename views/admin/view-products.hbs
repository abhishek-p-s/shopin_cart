<section>
    <div class="container">
        <div class="row mt-4">
            <a href="admin/add-product" class="btn btn-success ml-auto">add product</a>
        </div>
        <table class="table table-striped table-dark mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Catagory</th>
      <th scope="col">prize</th>
       <th scope="col">image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.Catagory}}</td>
      <td>{{this.Prize}}</td>
      <td><image src="/product-images/{{this._id}}.jpg" style="width:80px;height:80px"></image></td>
        <td>
           <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"onclick="return confirm('Are you sure to delete {{this.name}}  ?')" >Delete</a>
           <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        </td>
    </tr>
    {{/each}}
    
  </tbody>
</table> 
    </div>
</section>